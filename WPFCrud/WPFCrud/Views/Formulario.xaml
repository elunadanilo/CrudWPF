<Page x:Class="WPFCrud.Views.Formulario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFCrud"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Formulario">

    <Grid  Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0">Nombre</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="0" Name="TxtNombre"></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="1" >Edad</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="1" Name="TxtEdad"></TextBox>

        <Button Grid.Row="2" Grid.Column="1" Click="Button_Click">Guardar</Button>
    </Grid>
</Page>
